{% extends 'base.html.twig' %}

{% block title %}Users!{% endblock %}

{% block body %}
    <div class="example-wrapper">
    <div class="header-group">
        <h1>Users</h1>
    </div>

    <table>
        <thead>
        <tr>
            <th>Index</th>
            <th>Email</th>
            <th>Name</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.name }}</td>
                <td>
                    <div class="button-group">
                        <form action="{{ path('user_details', { 'id': user.id }) }}">
                            <button class="view-btn view-user-btn">
                                <svg viewBox="0 0 24 24" class="svgIcon"><path d="M15 12c0 1.654-1.346 3-3
                                        3s-3-1.346-3-3 1.346-3 3-3 3 1.346 3 3zm9-.449s-4.252 8.449-11.985 8.449c-7.18
                                        0-12.015-8.449-12.015-8.449s4.446-7.551 12.015-7.551c7.694 0 11.985 7.551
                                        11.985 7.551zm-7 .449c0-2.757-2.243-5-5-5s-5 2.243-5 5 2.243 5 5 5 5-2.243 5-5z"></path></svg>
                            </button>
                        </form>
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">No records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <script>
        function editExercise(id) {
            console.log('edit', id);
        }
    </script>
{% endblock %}