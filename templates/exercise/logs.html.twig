{% extends 'base.html.twig' %}

{% block title %}Exercise Log!{% endblock %}

{% block body %}
    <a href="{{ path('show_exercises') }}" class="previous">&#8249;</a>
    <div class="example-wrapper">
        <div class="header-group">
            <h1>{{ exerciseName }}</h1>
        </div>
        <table>
            <thead>
            <tr>
                <th>Index</th>
                <th>Muscle group</th>
                <th>Weight</th>
                <th>Duration</th>
                <th>Sets</th>
                <th>Reps</th>
                <th>Date</th>
            </tr>
            </thead>
            <tbody>
            {% for log in logs %}
                <tr>
                    <td>{{ log.exercise.id }}</td>
                    <td>{{ log.exercise.muscleGroup.name }}</td>
                    <td>{{ log.weight }}</td>
                    <td>{{ log.duration }}</td>
                    <td>{{ log.sets }}</td>
                    <td>{{ log.reps }}</td>
                    <td>{{ log.workout.createdAt|date('Y-m-d') }}</td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="8">No records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
